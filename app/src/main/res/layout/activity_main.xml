<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.passioncreativestudio.kyawagwin.myapplication.MainActivity">

    <Button
        android:text="Google Maps"
        android:id="@+id/activity_main_mapsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:onClick="onClick"/>

    <Button
        android:text="Login"
        android:id="@+id/activity_main_loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_mapsButton" />

    <Button
        android:text="Take Image"
        android:id="@+id/activity_main_takeImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_loginButton" />

    <Button
        android:text="Pick Image"
        android:id="@+id/activity_main_imagePickButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_takeImageButton" />

</android.support.constraint.ConstraintLayout>
